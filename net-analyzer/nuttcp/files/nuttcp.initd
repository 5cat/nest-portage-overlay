command="/usr/bin/nuttcp"
command_background="yes"
pidfile="/run/${SVCNAME}.pid"
command_args="${NUTTCP_OPTS}"

depend() {
	need net
	provide nuttcp
}

start_post() {
	pgrep -n $(echo ${SVCNAME} | sed 's/\..*//g') > ${pidfile}
}
